<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/carbon_fibre_repeating"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv_num1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="16dp"
        android:background="@android:drawable/editbox_dropdown_dark_frame"
        android:fontFamily="@font/coda"
        android:hint="0.0"
        android:paddingLeft="16sp"
        android:paddingTop="5sp"
        android:paddingRight="16sp"
        android:paddingBottom="5sp"
        android:textAlignment="textEnd"
        android:textColor="@color/grey_01"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_num2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="92dp"
        android:layout_marginEnd="16dp"
        android:background="@android:drawable/editbox_dropdown_dark_frame"
        android:fontFamily="@font/coda"
        android:hint="0.0"
        android:paddingLeft="16sp"
        android:paddingTop="5sp"
        android:paddingRight="16sp"
        android:paddingBottom="5sp"
        android:textAlignment="textEnd"
        android:textColor="@color/grey_01"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_erase"
        android:layout_width="72dp"
        android:layout_height="103dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="@android:color/holo_red_light"
        android:fontFamily="@font/coda"
        android:text="C"
        android:textIsSelectable="false"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_num2" />

    <Button
        android:id="@+id/button7"
        android:layout_width="74dp"
        android:layout_height="69dp"
        android:backgroundTint="@color/grey_01"
        android:fontFamily="@font/coda"
        android:onClick="presionarDigito"
        android:text="7"
        android:textColor="@color/black"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@+id/button8"
        app:layout_constraintEnd_toStartOf="@+id/button8"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button4"
        android:layout_width="74dp"
        android:layout_height="69dp"
        android:backgroundTint="@color/grey_01"
        android:fontFamily="@font/coda"
        android:onClick="presionarDigito"
        android:text="4"
        android:textColor="@color/black"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@+id/button5"
        app:layout_constraintEnd_toStartOf="@+id/button5"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button2"
        android:layout_width="74dp"
        android:layout_height="69dp"
        android:backgroundTint="@color/grey_01"
        android:fontFamily="@font/coda"
        android:onClick="presionarDigito"
        android:text="2"
        android:textColor="@color/black"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@+id/button3"
        app:layout_constraintEnd_toStartOf="@+id/button3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/button1" />

    <Button
        android:id="@+id/button1"
        android:layout_width="74dp"
        android:layout_height="69dp"
        android:backgroundTint="@color/grey_01"
        android:fontFamily="@font/coda"
        android:onClick="presionarDigito"
        android:text="1"
        android:textColor="@color/black"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@+id/button2"
        app:layout_constraintEnd_toStartOf="@+id/button2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button0"
        android:layout_width="74dp"
        android:layout_height="69dp"
        android:backgroundTint="@color/grey_01"
        android:fontFamily="@font/coda"
        android:onClick="presionarDigito"
        android:text="0"
        android:textColor="@color/black"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@+id/button_point"
        app:layout_constraintEnd_toStartOf="@+id/button_point"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button_point"
        android:layout_width="74dp"
        android:layout_height="69dp"
        android:backgroundTint="@android:color/holo_orange_dark"
        android:fontFamily="@font/coda"
        android:onClick="presionarDigito"
        android:text="."
        android:textColor="@color/black"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@+id/button_equals"
        app:layout_constraintEnd_toStartOf="@+id/button_equals"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/button0" />

    <Button
        android:id="@+id/button_equals"
        android:layout_width="74dp"
        android:layout_height="69dp"
        android:backgroundTint="@android:color/holo_orange_dark"
        android:fontFamily="@font/coda"
        android:text="="
        android:textColor="@color/black"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@+id/button_divide"
        app:layout_constraintEnd_toStartOf="@+id/button_divide"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/button_point" />

    <Button
        android:id="@+id/button3"
        android:layout_width="74dp"
        android:layout_height="69dp"
        android:backgroundTint="@color/grey_01"
        android:fontFamily="@font/coda"
        android:onClick="presionarDigito"
        android:text="3"
        android:textColor="@color/black"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@+id/button_multiply"
        app:layout_constraintEnd_toStartOf="@+id/button_multiply"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/button2" />

    <Button
        android:id="@+id/button_multiply"
        android:layout_width="74dp"
        android:layout_height="69dp"
        android:layout_marginTop="12dp"
        android:backgroundTint="@android:color/holo_orange_light"
        android:fontFamily="@font/coda"
        android:onClick="clicOperacion"
        android:text="X"
        android:textColor="@color/black"
        android:textSize="34sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="@+id/button_less"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/button3"
        app:layout_constraintStart_toStartOf="@+id/button_less"
        app:layout_constraintTop_toBottomOf="@+id/button_less" />

    <Button
        android:id="@+id/button_divide"
        android:layout_width="74dp"
        android:layout_height="69dp"
        android:layout_marginTop="12dp"
        android:backgroundTint="@android:color/holo_orange_light"
        android:fontFamily="@font/coda"
        android:onClick="clicOperacion"
        android:text="/"
        android:textColor="@color/black"
        android:textSize="34sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="@+id/button_multiply"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/button_equals"
        app:layout_constraintStart_toStartOf="@+id/button_multiply"
        app:layout_constraintTop_toBottomOf="@+id/button_multiply" />

    <Button
        android:id="@+id/button6"
        android:layout_width="74dp"
        android:layout_height="69dp"
        android:backgroundTint="@color/grey_01"
        android:fontFamily="@font/coda"
        android:onClick="presionarDigito"
        android:text="6"
        android:textColor="@color/black"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@+id/button_less"
        app:layout_constraintEnd_toStartOf="@+id/button_less"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/button5" />

    <Button
        android:id="@+id/button5"
        android:layout_width="74dp"
        android:layout_height="69dp"
        android:backgroundTint="@color/grey_01"
        android:fontFamily="@font/coda"
        android:onClick="presionarDigito"
        android:text="5"
        android:textColor="@color/black"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@+id/button6"
        app:layout_constraintEnd_toStartOf="@+id/button6"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/button4" />

    <Button
        android:id="@+id/button_less"
        android:layout_width="74dp"
        android:layout_height="69dp"
        android:layout_marginTop="12dp"
        android:backgroundTint="@android:color/holo_orange_light"
        android:fontFamily="@font/coda"
        android:onClick="clicOperacion"
        android:text="-"
        android:textColor="@color/black"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/button_plus"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/button6"
        app:layout_constraintStart_toStartOf="@+id/button_plus"
        app:layout_constraintTop_toBottomOf="@+id/button_plus" />

    <Button
        android:id="@+id/button8"
        android:layout_width="74dp"
        android:layout_height="69dp"
        android:backgroundTint="@color/grey_01"
        android:fontFamily="@font/coda"
        android:onClick="presionarDigito"
        android:text="8"
        android:textColor="@color/black"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@+id/button9"
        app:layout_constraintEnd_toStartOf="@+id/button9"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/button7" />

    <Button
        android:id="@+id/button9"
        android:layout_width="74dp"
        android:layout_height="69dp"
        android:backgroundTint="@color/grey_01"
        android:fontFamily="@font/coda"
        android:onClick="presionarDigito"
        android:text="9"
        android:textColor="@color/black"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@+id/button_plus"
        app:layout_constraintEnd_toStartOf="@+id/button_plus"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/button8" />

    <Button
        android:id="@+id/button_plus"
        android:layout_width="74dp"
        android:layout_height="69dp"
        android:layout_marginTop="28dp"
        android:backgroundTint="@android:color/holo_orange_light"
        android:fontFamily="@font/coda"
        android:onClick="clicOperacion"
        android:text="+"
        android:textColor="@color/black"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/button_erase"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/button9"
        app:layout_constraintStart_toStartOf="@+id/button_erase"
        app:layout_constraintTop_toBottomOf="@+id/button_erase" />

</androidx.constraintlayout.widget.ConstraintLayout>